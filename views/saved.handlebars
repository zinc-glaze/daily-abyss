<nav>
  <div class="container">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Scrape Left</a>
      <a href="#" data-target="side-burger" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a class="waves-effect waves-light btn clear-saved">Clear Articles</a></li>
      </ul>
    </div>
  </div>
</nav>

<ul class="sidenav" id="side-burger">
  <li><a href="/saved">Saved Articles</a></li>
  <li><button class="waves-effect waves-light btn scrape-new">Scrape New Articles</button></li>
  <li><button class="waves-effect waves-light btn clear-scraped">Clear Articles</button></li>
</ul>

<div class="container">
  <div class="row">
    <div class="col s12">
      {{#each articles}}
        <!-- Article --->
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              <a target="_blank" href={{{link}}}>{{title}}</a>
            </span>
            <p>
              {{summary}}
            </p>
          </div>
          <div class="card-action">
            <button class="waves-effect waves-light btn modal-trigger view-notes" data-target={{{_id}}} data-id={{{_id}}}>View Notes</button>
            <button class="waves-effect waves-light btn delete-article" data-id={{{_id}}}>Delete From Saved</button>
          </div>
        </div>
        <!-- Notes Modal -->
        <div id={{{_id}}} class="modal">
          <div class="modal-content">
            <h4>Notes for: </h4><h5>{{title}}</h5>
            {{> notes}}
          </div>
          <div class="modal-footer">
            <button class="modal-close waves-effect waves-green btn-flat">Save</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>