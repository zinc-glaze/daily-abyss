<ul class="sidenav" id="side-burger">
  <li><a href="/" class="center-align">HOME</a></li>
  <li><a class="waves-effect waves-light btn-small clear-saved">Clear Saved Articles</a></li>
</ul>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-image">
          <img src="/assets/img/storm_clouds.jpg">
          <span class="card-title">Independent News and Politics</span>
        </div>
        <div class="card-content">
          <p>* View and add notes to saved articles. * Manage your reading list.</p>
        </div>
      </div>
    </div>
    <div class="col s12">
      {{#each articles}}
        <!-- Article --->
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              <a target="_blank" href={{{link}}}>{{title}}</a>
            </span>
            <p>
              {{summary}}
            </p>
          </div>
          <div class="card-action">
            <button class="waves-effect waves-light btn modal-trigger view-notes" data-target={{{_id}}} data-id={{{_id}}}>View Notes</button>
            <button class="waves-effect waves-light btn delete-article" data-id={{{_id}}}>Delete From Saved</button>
          </div>
        </div>
        <!-- Notes Modal -->
        <div id={{{_id}}} class="modal">
          <div class="modal-content">
            <div class="row">
              <h6 class="center-align">Notes for: <span><em>{{title}}</em></span></h6>
            </div>
            <div class="row">
              <div class="col s12"><div class="note-area" note-area-id={{{_id}}}></div></div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="note-input" class="materialize-textarea" note-id={{{_id}}}></textarea>
                <label for="note-input">New Note</label>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button class="modal-close waves-effect waves-green btn-flat save-note" data-id={{{_id}}}>Save</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>