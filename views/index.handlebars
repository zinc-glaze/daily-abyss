<div class="container">
  <div class="row">
    <div class="col s12">
      {{#each articles}}
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              {{title}}
            </span>
            <p>
              {{summary}}
            </p>
            <p><a target="_blank" href={{{link}}}>{{link}}</a></p>
          </div>
          <div class="card-action">
            <button class="waves-effect waves-light btn save-article" data-id={{{_id}}}>Save</button>
            <button class="waves-effect waves-light btn delete-article" data-id={{{_id}}}>Delete</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>